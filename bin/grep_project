#!/bin/bash
#  
# walk up dir to src/ dir and do grep recursively for provided expression
# make hook in vim to call it
if [ -z $1 ];then
	echo "no search pattern provided"
	exit 1
else
	pattern=$1
fi
PWD=$(pwd)
#get last 'src' dir above current directory
SRC="${PWD%src*}/src"
grep -rn $pattern $SRC
